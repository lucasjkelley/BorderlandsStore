@model BorderlandsStore.DATA.EF.Models.Category

@{
    ViewData["Title"] = "Edit " + Model.Category1;
}
<hr />
<h1 class="text-white text-center">@ViewData["Title"]</h1>

@*<h4>Category</h4>*@
<hr />
<div class="row text-white">
    <div class="col-md-4 offset-4 bg-black bg-opacity-50">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="Category1" class="control-label"></label>
                <input asp-for="Category1" class="form-control" />
                <span asp-validation-for="Category1" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CategoryDescription" class="control-label"></label>
                <textarea asp-for="CategoryDescription" class="form-control"></textarea>
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
        </form>
        <br />
    </div>
</div>
<br />
<div class="form-group text-center">
    |<input type="submit" value=" Save " class="btn btn-primary" /> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a> |
</div>
<br />
<br />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
