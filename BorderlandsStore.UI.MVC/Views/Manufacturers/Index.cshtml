@model IEnumerable<BorderlandsStore.DATA.EF.Models.Manufacturer>

@{
    ViewData["Title"] = "Manufacturers";
}
<hr />
<h1 class="text-white">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table bg-black bg-opacity-50 text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ManufacturerId">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.ManufacturerId">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.ManufacturerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
