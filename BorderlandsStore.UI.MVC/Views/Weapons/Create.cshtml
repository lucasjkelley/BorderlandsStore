@model BorderlandsStore.DATA.EF.Models.Weapon

@{
    ViewData["Title"] = "Create";
}
<hr />
<h1 class="text-white text-center">Create New Weapon</h1>

@*<h4>Weapon</h4>*@
<hr />
<div class="row text-white">
    <div class="col-md-4 offset-4 bg-black bg-opacity-50">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ElementId" class="control-label"></label>
                <select asp-for="ElementId" class ="form-control" asp-items="ViewBag.ElementId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturerId" class="control-label"></label>
                <select asp-for="ManufacturerId" class ="form-control" asp-items="ViewBag.ManufacturerId"></select>
            </div>
            <div class="form-group">
                <img src="~/assets/img/Weapon_Pics/noimage.png" id="img" class="img-fluid d-block" style="max-height: 100px" />
                <label asp-for="WeaponImage" class="control-label"></label>
                <input type="file" asp-for="ImageFile" id="file-btn" class="form-control"/>
                @*<input asp-for="WeaponImage" class="form-control" />*@
                <span asp-validation-for="WeaponImage" class="text-danger"></span>
            </div>            
        </form>
        <br />
    </div>
</div>
<br />
<div class="form-group text-center">
    |<input type="submit" value=" Create " class="btn btn-primary" /> |
    <a asp-action="TiledProducts" class="btn btn-secondary">Back to List</a> |
</div>
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.getElementById("file-btn").onchange = function (evt) {
            var tgt = evt.target || window.event.srcElement,
                files = tgt.files;

            if (FileReader && files && files.length) {
                var fr = new FileReader();
                fr.onload = function () {
                    document.getElementById("img").src = fr.result;
                }
                fr.readAsDataURL(files[0]);
            }
        }
    </script>

}
