@{
    ViewData["Title"] = "Home";
}



<section class="page-section clearfix">
    <div class="container">
        <div class="intro">
            <img class="intro-img img-fluid mb-3 mb-lg-0 rounded" src="~/assets/img/finger_gun.png" alt="..." />
            <div class="intro-text left-0 text-center bg-faded p-5 rounded">
                <h2 class="section-heading mb-4">
                    <span class="section-heading-upper">Think Big</span>
                    <span class="section-heading-lower">No. THINK BIGGER.</span>
                </h2>
                <p class="mb-3">The biggest is the bestest. You know this. I know this. And we carry only the biggest, most baddest, bad boy bangers and shooters this side of the stars! Go big or go away!</p>
                <div class="intro-button mx-auto"><a class="btn btn-primary btn-xl" asp-action="TiledProducts" asp-controller="Weapons">Spend that Eridium!</a></div>
            </div>
        </div>
    </div>
</section>
<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <div class="cta-inner bg-faded text-center rounded">
                    <h2 class="section-heading mb-4">
                        <span class="section-heading-upper">Our Promise</span>
                        <span class="section-heading-lower">To You</span>
                    </h2>
                    <p class="mb-0">Every weapon we sell is guaranteed to eliminate all of your problems!  And if they don't, then remember; it's not the weapon, it's the shooter.</p><p class="text-sm-center"><em>*All of our weapon sales are guaranteed under our patented "There Are No Guarantees" Guarantee!</em></p>
                </div>
            </div>
        </div>
    </div>
</section>