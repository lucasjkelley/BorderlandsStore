@model IEnumerable<BorderlandsStore.DATA.EF.Models.Element>

@{
    ViewData["Title"] = "Elements";
}
<hr />
<h1 class="text-white">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table bg-black bg-opacity-50 text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ElementType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ElementType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ElementId">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.ElementId">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.ElementId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
