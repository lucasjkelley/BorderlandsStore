@model BorderlandsStore.DATA.EF.Models.Element

@{
    ViewData["Title"] = "Edit";
}
<hr />
<h1 class="text-white text-center">@ViewData["Title"] @Model.ElementType</h1>

@*<h4>Element</h4>*@
<hr />
<div class="row text-white">
    <div class="col-md-4 offset-4 bg-black bg-opacity-50">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ElementId" />
            <div class="form-group">
                <label asp-for="ElementType" class="control-label"></label>
                <input asp-for="ElementType" class="form-control" />
                <span asp-validation-for="ElementType" class="text-danger"></span>
            </div>            
        </form>
        <br />
    </div>
</div>
<br />
<div class="form-group text-center">
    |<input type="submit" value=" Save " class="btn btn-primary btn-sm" /> |
    <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a> |
</div>
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
